source 'http://rubygems.org'

gem 'rails', '3.1.0'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'pg'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

gem 'haml-rails'
gem 'jquery-rails'
gem 'RedCloth'

gem 'devise'

gem 'postmark-rails'
gem 'time_diff'

group :development do
  # Faster development?
  gem 'active_reload'

  # irb
  gem 'wirble'
  gem 'hirb'
  gem 'awesome_print'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'cucumber-rails'
  gem 'factory_girl'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'metric_fu'
  gem 'fattr'
  gem 'arrayfields'
  gem 'map'
  gem 'googlecharts'
  gem 'shoulda-matchers'

  # auto-test
  gem 'spork', '~> 0.9.0.rc9'

  gem 'guard'
  gem 'guard-bundler'
  gem 'guard-rspec'
  gem 'guard-livereload'
  gem 'guard-cucumber'
  gem 'guard-spork'
  gem 'rb-fsevent'
  gem 'growl'
  # gem 'psych'
end